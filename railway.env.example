# ========================================
# Variables de entorno para Railway
# ========================================
# Configura estas variables en Railway Dashboard > Variables

# Django Settings
SECRET_KEY=tu-clave-secreta-super-segura-aqui
DEBUG=False
ALLOWED_HOSTS=tu-app.railway.app,*.railway.app

# Database (Railway lo provee automáticamente cuando agregas PostgreSQL)
# DATABASE_URL se configura automáticamente, NO la agregues manualmente

# CORS (agregar tu dominio de frontend cuando lo despliegues)
CORS_ALLOWED_ORIGINS=https://tu-frontend.vercel.app,https://tu-frontend.netlify.app

# Opcional: si usas dominios personalizados
# ALLOWED_HOSTS=api.tudominio.com,tu-app.railway.app

